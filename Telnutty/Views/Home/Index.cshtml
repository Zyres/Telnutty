<div class="jumbotron">
    <h1><b>TelnuTTY</b> <img class="pull-right" alt="TelnuTTY" width="128" height="124" src="/Images/Telnutty.png" /></h1>
    <p class="lead">TelnuTTY lets you telnet to any machine from your web browser without plugins!</p>
    <form role="form">
        <div class="form-group form-inline">
            <label for="host" class="control-label">Host</label>
            <input type="text" class="form-control" id="host" placeholder="e.g. telehack.com" style="width: 20em">
            <label for="port" class="control-label">Port</label>
            <input type="text" class="form-control" id="port" placeholder="e.g. 23" value="23" style="width: 5em">
            <input class="btn btn-primary" type="button" id="connect" value="Connect" />
        </div>
    </form>
</div>

<pre class="top-buffer terminal" id="terminal" tabindex="0">
</pre>

<p style="margin-top: 5px">Looking for places on the internet to telnet?  Try the suggestions from <a href="http://www.telnet.org/htm/places.htm" target="_blank">telnet.org</a>.</p>

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery/jquery.signalR-2.0.3.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/ansi_up.js"></script>
    <!--SignalR script to update the telnet page and send messages.-->
    <script src="~/Scripts/telnet.js"></script>
}
