<div class="jumbotron">
    <h1>Telnutty</h1>
    <p class="lead">Telnutty lets you telnet to any machine from your web browser using only HTML5 and JavaScript!</p>
    <form role="form">
        <div class="form-group form-inline">
            <label for="host" class="control-label">Host</label>
            <input type="text" class="form-control" id="host" placeholder="127.0.0.1" style="width: 20em">
            <label for="port" class="control-label">Port</label>
            <input type="text" class="form-control" id="port" placeholder="23" style="width: 5em">
            <input class="btn btn-default" type="button" id="connect" value="Connect" />
        </div>
    </form>
</div>

<pre class="top-buffer terminal" id="terminal" tabindex="0">
</pre>

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.0.3.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/ansi_up.js"></script>
    <!--SignalR script to update the telnet page and send messages.-->
    <script src="~/Scripts/telnet.js"></script>
}
